<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#7DCECE">

    <ImageView
        android:id="@+id/imgKamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Kapasitas Pasien"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#173E3E"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtRanjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Ranjang"
            android:textSize="8dp"
            android:textColor="@color/white"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtPakai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terpakai"
            android:textColor="@color/white"
            android:textSize="8dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtKosong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kosong"
            android:textColor="@color/white"
            android:textSize="8dp"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>
</LinearLayout>